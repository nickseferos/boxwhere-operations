%= form_with(model: vessel, local: true) do |form| %>
  <% if vessel.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(vessel.errors.count, "error") %> prohibited this vessel from being saved:</h2>

      <ul>
        <% vessel.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :steamship_line_id %>
    <%= form.collection_select(:steamship_line_id, @steamship_lines, :id, :name, include_blank: true)%>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :length_overall %>
    <%= form.number_field :length_overall %>
  </div>
  <%= form.fields_for :bays do |b| %>
    <%= b.label :number %>
    <%= b.number_field :number %>
  <% end %>

  <div class="actions">
    <%= form.submit class: 'btn btn-outline-primary' %>
  </div>
<% end %>













<%= simple_form_for @vessel do |f| %>
<%= f.collection_select(:steamship_line_id, @steamship_lines, :id, :name, include_blank: true)%>
  <%= f.input :name %>
  <%= f.input :length_overall %>
  <h3>Bays</h3>
  <div id='bays'>
    <%= f.simple_fields_for :bays do |bay| %>
      <%= render 'bay_fields', f: bay %>
    <% end %>
    <div class='links'>
      <%= link_to_add_association 'add bay', f, :bays %>
    </div>
  </div>
  <%= f.submit 'Save' %>
<% end %>
