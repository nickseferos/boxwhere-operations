<p id="notice"><%= notice %></p>

<h1>Crane Operators</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Work Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @longshore_regs.each do |longshore_reg| %>
      <tr>
        <td><%= longshore_reg.name %></td>
        <td><%= longshore_reg.number %></td>
        <td><div class="btn-group" role="group" aria-label="Basic example"><%= link_to 'Performance & History', longshore_reg, class: 'btn btn-outline-primary btn-sm' %>
        <%= link_to 'Modify', edit_longshore_reg_path(longshore_reg), class: 'btn btn-outline-secondary btn-sm' %>
        <%= link_to 'Delete', longshore_reg, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm' %></div></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Crane Operator', new_longshore_reg_path, class: 'btn btn-outline-primary' %>
